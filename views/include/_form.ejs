 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="patientName" class="text-light">Patient Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="patientName" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="mobile" class="text-light">Mobile Number</label>
            <input type="number" name="mobile" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="doctor" class="text-light">Doctor Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="doctor" value="" placeholder="">
        </div>

        <div class="form-group">
            <label for="department" class="text-light">Department Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="department" value="" placeholder="">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>